{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "colcon",
			"args": [
				"build",
				"--symlink-install",
				"--event-handlers",
				"console_cohesion+",
				"--base-paths",
				"/home/jermito/rina_ws",
				"--cmake-args",
				"-DCMAKE_BUILD_TYPE=RelWithDebInfo"
			],
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "colcon: build"
		},
		{
			"command": "rosdep update && rosdep install --from-path src --ignore-src -r -y --include-eol-distros",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "rosdep: update and install"
		}
	]
}